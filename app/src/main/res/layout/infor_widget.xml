<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="homeFragmentViewModel"
            type="com.example.weatherapp.viewmodels.HomeFragmentViewModel"/>
    </data>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="@dimen/width_infor"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_information"
            android:padding="@dimen/padding_vertical"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Uv Indicator"
                android:textSize="@dimen/size_txt"
                android:textColor="@color/grey"
                app:fontStyle="normal"
                app:fontWeight="400"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{homeFragmentViewModel.txtUv}"
                android:textSize="@dimen/size_txt_big"
                android:textColor="@color/white"
                app:fontStyle="normal"
                app:fontWeight="400"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Low"
                android:textSize="@dimen/size_txt_big"
                android:textColor="@color/white"
                app:fontStyle="normal"
                app:fontWeight="400"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_vertical"
                android:text="Low level during all the day."
                android:textSize="@dimen/size_txt_small"
                android:textColor="@color/white"
                app:fontStyle="normal"
                app:fontWeight="400"/>

        </LinearLayout>

        <Space
            android:layout_width="@dimen/margin_item"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="@dimen/width_infor"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="@dimen/width_infor"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_information"
                android:padding="@dimen/padding_vertical"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FEELS LIKE"
                    android:textSize="@dimen/size_txt"
                    android:textColor="@color/grey"
                    app:fontStyle="normal"
                    app:fontWeight="400"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{homeFragmentViewModel.txtFeelsLike}"
                    android:textSize="@dimen/size_txt_big"
                    android:textColor="@color/white"
                    app:fontStyle="normal"
                    app:fontWeight="400"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/width_infor"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_information"
                android:paddingHorizontal="@dimen/padding_horizontal"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/padding_vertical"
                android:padding="@dimen/padding_vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PRESSURE"
                    android:textSize="@dimen/size_txt"
                    android:textColor="@color/grey"
                    app:fontStyle="normal"
                    app:fontWeight="400"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{homeFragmentViewModel.txtPressure}"
                    android:textSize="@dimen/size_txt_big"
                    android:textColor="@color/white"
                    app:fontStyle="normal"
                    app:fontWeight="400"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>