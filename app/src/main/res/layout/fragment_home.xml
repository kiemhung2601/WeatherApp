<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_weight="1"
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_background"
            android:orientation="vertical"
            android:padding="@dimen/padding_horizontal">

            <TextView
                android:id="@+id/txt_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Escondido"
                android:textColor="@color/white"
                android:textSize="@dimen/size_txt_big"
                app:fontStyle="normal"
                app:fontWeight="400" />

            <TextView
                android:id="@+id/txt_local_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jul 13 2021"
                android:textColor="@color/grey"
                android:textSize="@dimen/size_txt"
                app:fontStyle="normal"
                app:fontWeight="400" />

            <ImageView
                android:id="@+id/img_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:minHeight="200dp"
                android:minWidth="200dp"
                android:src="@drawable/ic_cloudy" />

            <TextView
                android:id="@+id/txt_temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="18Â°C"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/size_txt_temperature"
                app:fontStyle="normal"
                app:fontWeight="400" />


            <TextView
                android:id="@+id/txt_weather_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cloudy"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/size_txt"
                app:fontStyle="normal"
                app:fontWeight="400" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/include_temp"
                    layout="@layout/temp_widget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginBottom="@dimen/padding_horizontal" />

                <include
                    android:id="@+id/include_infor"
                    layout="@layout/infor_widget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_horizontal" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background"
        android:paddingHorizontal="@dimen/padding_horizontal"
        android:paddingTop="@dimen/padding_vertical">
        <include
            android:id="@+id/include_settings"
            layout="@layout/setting_widget"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>