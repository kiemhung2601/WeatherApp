<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_vertical"
    android:background="@drawable/gradient_information">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_name_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_txt_big"
            android:textColor="@color/white"
            android:text="Escondido"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txt_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_txt_big"
            android:textColor="@color/white"
            android:text="49°C"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_txt"
        android:textColor="@color/grey"
        android:text="3:12"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_txt_big"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_txt"
            android:textColor="@color/grey"
            android:text="Cloudy"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txt_limit_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_txt"
            android:textColor="@color/grey"
            android:text="Max. 81°C Min 48°C"/>
    </LinearLayout>
</LinearLayout>